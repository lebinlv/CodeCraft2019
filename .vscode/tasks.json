{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "windows": {
                "command": "g++"
            },
            "linux": {
                "command": "g++-6"
            },
            "args": [
                "-O0",
                "-Wall",
                "-g",
                "-ggdb",
                "-std=c++11",
                "${workspaceFolder}/CodeCraft-2019/CodeCraft-2019.cpp",
                "${workspaceFolder}/CodeCraft-2019/object.cpp",
                "-o",
                "${workspaceFolder}/bin/CodeCraft-2019"
            ]
        },
        {
            "label": "build-release",
            "type": "shell",
            "windows": {
                "command": "g++"
            },
            "linux": {
                "command": "g++-6"
            },
            "args": [
                "-O3",
                "-Wall",
                "-std=c++11",
                "${workspaceFolder}/CodeCraft-2019/CodeCraft-2019.cpp",
                "${workspaceFolder}/CodeCraft-2019/object.cpp",
                "-o",
                "${workspaceFolder}/bin/CodeCraft-2019"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run-release",
            "type": "shell",
            "command": "${workspaceFolder}/bin/CodeCraft-2019",
            "args": [
                "${workspaceFolder}/config/car.txt",
                "${workspaceFolder}/config/road.txt",
                "${workspaceFolder}/config/cross.txt",
                "${workspaceFolder}/config/presetAnswer.txt",
                "${workspaceFolder}/config/answer.txt"
            ],
            "problemMatcher": []
        },
        {
            "label": "Simulate",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/simulator.py",
                "${workspaceFolder}/config/car.txt",
                "${workspaceFolder}/config/road.txt",
                "${workspaceFolder}/config/cross.txt",
                "${workspaceFolder}/config/answer.txt"
            ],
            "problemMatcher": []
        },
        {
            "label": "Visualize",
            "type": "shell",
            "command": "python2",
            "args": [
                "${workspaceFolder}/tools/visualize.py",
                "${workspaceFolder}/config/car.txt",
                "${workspaceFolder}/config/road.txt",
                "${workspaceFolder}/config/cross.txt",
                "${workspaceFolder}/config/presetAnswer.txt",
                "${workspaceFolder}/config/"
            ],
            "problemMatcher": []
        }
    ]
}
